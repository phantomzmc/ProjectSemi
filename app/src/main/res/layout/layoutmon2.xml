<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/b21"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="63dp"
        android:contentDescription="@string/buttonplay"
       />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageView
        android:id="@+id/b23"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_toEndOf="@+id/linearLayout4"
        android:layout_toRightOf="@+id/linearLayout4"
        android:contentDescription="@string/buttonplay"
         />

    <ImageView
        android:id="@+id/b22"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/b23"
        android:contentDescription="@string/buttonplay"
         />

    <ImageView
        android:id="@+id/pause"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/play"
        android:layout_alignLeft="@+id/b22"
        android:layout_alignStart="@+id/b22" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="75dp"
        android:layout_height="62dp"
        android:layout_below="@+id/b23"
        android:layout_alignRight="@+id/b23"
        android:layout_alignEnd="@+id/b23" />

</RelativeLayout>
